<Window x:Class="ChessGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:ChessGame"
        Title="Chess for Kinect" Height="820" Width="600">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        <k:KinectUserViewer VerticalAlignment="Top" HorizontalAlignment="Center" k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" UserColoringMode="Manual" />
        <k:KinectRegion Name="kinectRegion" Margin="10">
            <Grid>
                <Image Source="ChessGame/imgs/Title.png" Margin="146,69,135,520"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Name="buttonStack">
                    <Button x:Name="buttonA">Begin!</Button>
                    <Button>Instructions</Button>
                    <Button>Exit</Button>
                </StackPanel>
            </Grid>
        </k:KinectRegion>
    </Grid>
</Window>
